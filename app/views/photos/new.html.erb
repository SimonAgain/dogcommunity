<h2>Add a Photo</h2>

<%= form_for @photo do |f| %>

  <%= f.label :dog_id, 'Select a dog' %>
  <% if @user.owner? %>
    <%= f.select :dog_id, @user.owned_dogs.pluck(:name, :id) %>
  <% else %>
    <%= f.select :dog_id, @user.walked_dogs.pluck(:name, :id) %>
  <% end %>
  <br><br>

  <%= f.label :image, 'Photo' %> <br>
  <%= f.text_field :image %>
  <br><br>

  <%= f.submit 'Submit Edit'  %>

<% end %>

<div class="frame">
  <%= image_tag 'dino_walk2.jpg' %>
</div>
<br><br><br><br><br><br>
